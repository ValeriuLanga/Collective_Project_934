<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation_main" app:startDestination="@id/splashFragment">

    <fragment android:id="@+id/splashFragment" android:name="proiectcolectiv.g934.itemrental.page.splash.SplashFragment"
              android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/navigation_main"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/navigation_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment android:id="@+id/loginFragment" android:name="proiectcolectiv.g934.itemrental.page.login.LoginFragment"
              android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/navigation_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment android:id="@+id/registerFragment"
              android:name="proiectcolectiv.g934.itemrental.page.register.RegisterFragment"
              android:label="RegisterFragment"/>
    <fragment
        android:id="@+id/listFragment"
        android:name="proiectcolectiv.g934.itemrental.page.list.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_listFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/navigation_main"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="proiectcolectiv.g934.itemrental.page.add.AddFragment"
        android:label="AddFragment" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="proiectcolectiv.g934.itemrental.page.details.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="rentableItem"
            app:argType="proiectcolectiv.g934.itemrental.data.remote.model.RentableItemModel" />
        <action
            android:id="@+id/action_detailsFragment_self"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>