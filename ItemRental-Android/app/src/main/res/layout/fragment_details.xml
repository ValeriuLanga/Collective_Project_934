<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/error_red"
            android:maxHeight="256dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_logo_foreground"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewImage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rake"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:text="100 lei"
                android:textColor="@color/colorAccent"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Tools >> Harvesting"
                app:layout_constraintStart_toStartOf="@id/itemTitle"
                app:layout_constraintTop_toBottomOf="@id/itemTitle" />

            <TextView
                android:id="@+id/itemDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="@string/description"
                android:maxLength="200"
                android:textColor="@color/black"
                android:maxLines="10"
                android:text="It is a broom for outside use; a horticultural implement consisting of a toothed bar fixed transversely to a handle, or tines fixed to a handle, and used to collect leaves, hay, grass, etc., and in gardening, for loosening the soil, light weeding and levelling, removing dead grass from lawns, and generally for purposes performed in agriculture by the harrow."
                app:layout_constraintEnd_toEndOf="@id/itemPrice"
                app:layout_constraintStart_toStartOf="@id/itemCategoryTextView"
                app:layout_constraintTop_toBottomOf="@id/itemCategoryTextView" />

            <ImageView
                android:id="@+id/toRentIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_to_rent"
                android:tint="@color/colorPrimaryDark"
                tools:ignore="ContentDescription"
                app:layout_constraintStart_toStartOf="@id/itemDescriptionTextView"
                app:layout_constraintTop_toBottomOf="@id/itemDescriptionTextView" />

            <TextView
                android:id="@+id/itemStartTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/toRentIcon"
                app:layout_constraintTop_toTopOf="@id/toRentIcon"
                android:text="Dec 22, 2018" />

            <ImageView
                android:id="@+id/toReceiveIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_to_receive"
                android:tint="@color/colorPrimaryDark"
                tools:ignore="ContentDescription"
                app:layout_constraintEnd_toStartOf="@id/itemEndTimeTextView"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/itemEndTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/toReceiveIcon"
                android:text="Aug 13, 2019" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>